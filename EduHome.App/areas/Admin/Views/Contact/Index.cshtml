@model IEnumerable<Contact>
<div class="container">
    <table class="table table-lg">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email:</th>
                <th scope="col">Subject</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.Email</th>
                    <th>@item.Subject</th>
                    <td><a onclick="if (!confirm('Delete selected item?')){return false;}" asp-controller="contact" asp-action="Delete" asp-route-id="@item.Id" class=" delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
</div>




